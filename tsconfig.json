{
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "preserveWhitespaces": false,
        "strictInjectionParameters": true
    },
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "src",
      "declaration": false,
      "downlevelIteration": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "lib": [
        "es2018",
        "dom"
      ],
      "module": "esnext",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "./dist/out-tsc",
      "paths": {
        "@app/*": [
          "app/*"
        ],
        "@common/*": [
          "modules/app-common/*"
        ],
        "@modules/*": [
          "modules/*"
        ],
        "@testing/*": [
          "testing/*"
        ]
      },
      "resolveJsonModule": true,
      "sourceMap": true,
      "strict": true,
      "target": "ES2022",
      "typeRoots": [
        "node_modules/@types",
        "src/typings"
      ],
      "useDefineForClassFields": false
    }
}
